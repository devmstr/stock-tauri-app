{
  "$schema": "./gen/schemas/desktop-schema.json",
  "productName": "Exhaust Manager",
  "version": "0.1.0",
  "identifier": "com.totalpaie.exhaust.manager",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Exhaust Manager",
        "width": 1400,
        "height": 850,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:exhaust.db"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "OKI Stock",
    "windows": {
      "wix": {
        "language": "fr-FR"
      }
    }
  }
}
